<theme>
    <formatVersion>3</formatVersion>

	<view name="system">
	
		<image name="background" extra="true">
		    <path>./assets/bground-menu.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
	
	</view>
	
    <view name="basic">
	
		<image name="background" extra="true">
			<path>./assets/bground-empty.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image> 
		
		<textlist name="gamelist">
			<pos>0.025 0.19</pos>
			<size>0.950 0.68</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
   
	</view>
	
	<view name="detailed">
	
		<image name="background" extra="true">
			<path>./assets/bground-full.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>
		
		<image name="md_image">
			<pos>0.25 0.56</pos>
	   <!-- <size>0.135 0.301</size> -->
			<maxSize>0.366 0.480</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
		<textlist name="gamelist">
			<pos>0.525 0.19</pos>
			<size>0.45 0.68</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
		
		<image name="player_overlay" extra="true">
			<tile>false</tile>
			<pos>0.252 0.271</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.15 0.15</maxSize>
			<path>./assets/overlay-players.png</path>
		</image>

		<text name="md_lbl_players">
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.034</fontSize>
			<size>0.12 0.04</size>
			<pos>0.185 0.25</pos>
		</text>
		
		<text name="md_players">
			<color>ffffff</color>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.034</fontSize>
			<size>0.14 0.04</size>
			<pos>0.30 0.25</pos>
		</text>	
		
	</view>
	
	<view name="system, basic, detailed">
	
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./assets/font2.ttf</fontPath>
			<pos>0.020 0.94</pos>
			<fontSize>0.025</fontSize>
		</helpsystem>

	</view>

    <view name="basic, detailed">
	
	<!--  md_lbl_players, md_players -->

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_playcount, md_description, md_rating">
			<fontPath>./assets/invisible.ttf</fontPath>
			<fontSize>0.01</fontSize>
			<pos>1 1</pos>
		</text>

		<datetime name="md_releasedate, md_lastplayed">
			<fontPath>./assets/invisible.ttf</fontPath>
			<fontSize>0.01</fontSize>
			<pos>1 1</pos>
		</datetime>
		
		<rating name="md_rating">
			<filledPath>./assets/invisible.png</filledPath>
			<unfilledPath>./assets/invisible.png</unfilledPath>
		</rating>

		<textlist name="gamelist">
			<selectorColor>ef8100</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./assets/font.ttf</fontPath>
			<fontSize>0.030</fontSize>
		</textlist> 	
		
		<image name="logo">
			<pos>0.5 0.08</pos>
			<origin>0.5 0.5</origin>
			<maxSize>1 0.10</maxSize>
		</image>
		
		<image name="turtle_overlay" extra="true">
			<tile>false</tile>
			<pos>0.965 0.95</pos>
            <origin>0.5 0.5</origin>
			<maxSize>0.1 0.1</maxSize>
			<path>./assets/overlay-turtle.png</path>
		</image>
		
	</view>
	
</theme>
